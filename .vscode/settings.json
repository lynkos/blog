{
  // Prettier
  "editor.defaultFormatter": "GitHub.copilot",
  "editor.formatOnSave": true,
  // Shopify Liquid
  "files.associations": {
    "*.html": "liquid"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  // Formatter
  "[html][liquid]": {
    "editor.defaultFormatter": "GitHub.copilot"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "GitHub.copilot"
  },
  // Disable vscode built-in stylelint
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  // Auto-load SSH key
  "terminal.integrated.env.osx": {
    "LOAD_SSH_KEY": "/usr/bin/ssh-add --apple-load-keychain -q"
  }
}