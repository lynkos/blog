{
  "name": "chirpy-lynkos",
  "version": "1.0.0",
  "description": "A heavily modified fork of jekyll-theme-chirpy for blogging.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lynkos/blog.git"
  },
  "author": "Cotes Chung",
  "contributors": [
    {
      "name": "Kiran Brahmatewari",
      "url": "https://lynkos.dev"
    }
  ],
  "license": "MIT",
  "since": 2019,
  "bugs": {
    "url": "https://github.com/lynkos/blog/issues"
  },
  "homepage": "https://github.com/lynkos/blog",
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:css": "node purgecss.js",
    "build:js": "rollup -c --bundleConfigAsCjs --environment BUILD:production",
    "watch:js": "rollup -c --bundleConfigAsCjs -w",
    "lint:scss": "stylelint _sass/**/*.scss",
    "lint:fix:scss": "npm run lint:scss -- --fix",
    "test": "npm run lint:scss"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "concurrently": "^9.1.2",
    "purgecss": "^7.0.2",
    "rollup": "^4.41.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^15.0.1"
  },
  "prettier": {
    "trailingComma": "none"
  },
  "browserslist": [
    "last 2 versions",
    "> 0.2%",
    "not dead"
  ]
}
